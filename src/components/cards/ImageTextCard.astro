---
const { imgSrc, title, description } = Astro.props;
---

<div class="corevalue-card__card">
	<div class="corevalue-card__content">
		<h3 class="corevalue-card__title">{title}</h3>
		<!-- I would like to swap this out with Astro's Image integration soon but was having some issues with it at the moment so we're going old school here. -->
		<picture>
			<source srcset={`${imgSrc}`} />
			<img
				class="corevalue-card__img"
				src={`${imgSrc}`}
				alt={title}
				loading="lazy"
				width="780"
				height="585"
				decoding="async"
			/>
		</picture>
		<p>{description}</p>
	</div>
</div>

<style>
	.corevalue-card__card {
		background-color: var(--theme-surface-1);
		color: var(--theme-on-surface-1);
		border-radius: var(--theme-shape-radius);
	}
	.corevalue-card__link {
		display: block;
		text-decoration: none;
	}
	.corevalue-card__content {
		padding: 1rem 1rem 0 1rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		overflow-y: hidden;
	}
	.corevalue-card__content picture {
		width: 100%;
		height: 100%;
		padding-bottom: 1rem;
	}
	.corevalue-card__card .corevalue-card__img {
		--image-shadow: 0 -0.5rem 1rem rgba(138, 138, 138, 0.12);
		margin: 0 auto;
		width: clamp(60%, 70%, 390px);
		height: auto;
		object-fit: cover;
		/* border-radius: 1rem 1rem 0 0; */
		box-shadow: var(--image-shadow);
		transform: translateY(0.5rem);
		transition: transform var(--theme-transition);
	}
	.corevalue-card__card:hover .corevalue-card__img {
		transform: translateY(0);
	}
	.corevalue-card__title {
		font-family: var(--theme-font-family-sans);
	}
</style>
