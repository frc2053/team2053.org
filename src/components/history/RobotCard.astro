---
const { robotName, wins, losses, events, awards } = Astro.props;
---

<div class="robot-card__card">
	<div class="robot-card__content">
		<h4 class="robot-card__robotName">Robot Name: {robotName}</h4>
		<h4 class="robot-card__record">Record: {wins} - {losses}</h4>
        <h4 class="robot-card__events">Events:</h4>
        <ul>
            {events.map((eventName) => <li>{eventName}</li>)}
        </ul>
        <h4 class="robot-card__awards">Awards:</h4>
        <ul>
            {awards && awards.map((award) => <li>{award}</li>)}
        </ul>
	</div>
</div>

<style>
	.robot-card__card {
		background-color: var(--theme-surface-1);
		color: var(--theme-on-surface-1);
		border-radius: var(--theme-shape-radius);
	}
	.robot-card__link {
		display: block;
		text-decoration: none;
	}
	.robot-card__content {
		padding: 1rem 1rem 0 1rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		overflow-y: hidden;
	}
	.robot-card__content picture {
		width: 100%;
		height: 100%;
	}
	.robot-card__card .robot-card__img {
		--image-shadow: 0 -0.5rem 1rem rgba(138, 138, 138, 0.12);
		margin: 0 auto;
		width: clamp(60%, 70%, 390px);
		height: auto;
		object-fit: cover;
		/* border-radius: 1rem 1rem 0 0; */
		box-shadow: var(--image-shadow);
		transform: translateY(0.5rem);
		transition: transform var(--theme-transition);
	}
	.robot-card__card:hover .robot-card__img {
		transform: translateY(0);
	}
	.robot-card__title {
		font-family: var(--theme-font-family-sans);
	}
</style>
