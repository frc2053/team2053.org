---
import { TextSection, TextCardSection } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import HeroSection from '../../components/sections/heros/HeroSection.astro';
import CountdownSection from '@components/sections/heros/CountdownSection.astro';

const seo = {
	title: 'Current Season | Southern Tier Robotics',
	description: 'Information about the current season',
};
---
<Layout {seo}>
	<HeroSection>
		<div slot="text-container">
			<h1>Off Season Competition Schedule</h1>
			<ul style="list-style: none; padding: 0;">
				<li style="margin-bottom: 1.5rem;">
					<strong>Ra Cha Cha Ruckus</strong>
					<br />
					<span>September 28th, 2025</span>
					<br />
					<em>Nazareth University Golisano Training Center, Rochester, NY</em>
					<br />
					<a href="https://ruckus.penfieldrobotics.com/" target="_blank" rel="noopener">Event Website</a>
				</li>
				<li>
					<strong>RoboReplay</strong>
					<br />
					<span>October 11th &amp; 12th, 2025</span>
					<br />
					<em>John Dewey High School, Brooklyn, NY</em>
					<br />
					<a href="https://sites.google.com/nycfirst.org/nyc-robo-replay/home" target="_blank" rel="noopener">Event Website</a>
				</li>
			</ul>
			<hr style="margin: 2rem 0;" />
		</div>
		<picture slot="image-container">
			<img
				src="/assets/images/rebuiltlogo.png"
				alt="Rebuilt Logo"
				id="current-season-logo"
			/>
		</picture>
	</HeroSection>
	<CountdownSection targetDate='2026-01-10 12:00:00' title="Kickoff Countdown"></CountdownSection>
	<TextSection narrow>
		<h3>Good Resources:</h3>
		<p>
			<a
				href="https://docs.google.com/document/d/1bE_2YUtZ2e0jtnDK2_itQkPTz2gczKb6DidZ5INTC1k/pub"
				>Team Handbook and Rules</a
			>
		</p>
		<p>
			<!-- <a href="https://forms.gle/fZBtZrikUUdukjh19"
				>Here is the link to the FRC Game Manual Quiz!</a
			> -->
			<a href="https://info.firstinspires.org/first-age"
				>Link to FIRST information page for this season!</a
			>
		</p>
	</TextSection>
	<TextSection narrow>
		<h3>More Info:</h3>
		<p>
			Here you can find information about meetings, and more information
			for this year. Please be outside of the front doors of the school at
			5pm/8am, or you will have to be let in by a mentor later.
		</p>
		<p>
			<b
				><i>Please check calendar for specific days we will not meet.</i
				></b
			>
		</p>
		<ul>
			<li>
				Schedule before January 10th, 2026
				<ul>
					<li>Monday: 5-8pm</li>
					<li>Wesnesday: 5-8pm</li>
					<li>Friday: 5-8pm</li>
					<li>Saturday: 8am-1pm</li>
				</ul>
			</li>
			<li>
				Schedule after January 10th, 2026
				<ul>
					<li>Monday: 5-8pm</li>
					<li>Wesnesday: 5-8pm</li>
					<li>Friday: 5-8pm</li>
					<li>Saturday: 8am-1pm</li>
				</ul>
			</li>
		</ul>
	</TextSection>
	<TextSection narrow>
		<h2>Meeting Calendar:</h2>
		<iframe
			src="https://calendar.google.com/calendar/embed?height=600&wkst=1&ctz=America%2FNew_York&showPrint=0&title=2026%20Events&src=M2E1MmE4NzM2Yjk4NjNiNmQ4Njk2NDgyOTFlYWQ0ZTRhNjMxOWI0NWIwMjJmYWE5YzVmZmJkMDVlZjQwODRiZEBncm91cC5jYWxlbmRhci5nb29nbGUuY29t&color=%230b8043"
			style="border-width:0"
			width="800"
			height="600"
			frameborder="0"
			scrolling="no"></iframe>
	</TextSection>
</Layout>
